{
   "name": "安全守卫",
   "version": "2.0.1",
   "description": "安全守卫",
   "permissions": ["tabs", "history", "windows", "http://*/*", "https://*/*", "storage", "fileSystem"],
   "background": {
     "scripts": ["background.js"],
     "persistent": false
   },
   "content_scripts":
    [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/jquery.js", "js/inject.js", "js/host.js"],
        "run_at": "document_idle"
      }
    ],
   "browser_action": {
     "default_title": "安全守卫"
   },
   "web_accessible_resources": ["js/inject.js"],
   "manifest_version": 2
 }
